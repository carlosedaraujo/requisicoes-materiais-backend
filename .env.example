# Server Configuration
PORT=3001
NODE_ENV=development

# Database Configuration (PostgreSQL)
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=yourpassword
DB_NAME=requisicoes_db
DB_DIALECT=postgres

# JWT Configuration
JWT_SECRET=yourSuperSecretKeyForJWT!
JWT_EXPIRES_IN=1d

# Nodemailer Configuration (example using Ethereal for testing)
# For production, use a real SMTP provider like SendGrid, Mailgun, etc.
EMAIL_HOST=smtp.ethereal.email
EMAIL_PORT=587
EMAIL_USER=your_ethereal_user@ethereal.email
EMAIL_PASS=your_ethereal_password
EMAIL_FROM="Sistema de Requisições <noreply@example.com>"

# Frontend URL (for email links)
FRONTEND_URL=http://localhost:3000